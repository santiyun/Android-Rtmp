<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<FrameLayout
		android:id="@+id/push_root"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:orientation="vertical">

		<Button
			android:id="@+id/push_pause"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="暂停推流" />

		<Button
			android:id="@+id/push_pause_audio"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="静音" />
	</LinearLayout>

	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="20dp"
		android:background="#66DCDCDC">

		<LinearLayout
			android:id="@+id/linearlayout1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/pull_audio_down"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#000"
				android:textSize="14sp" />

			<TextView
				android:id="@+id/pull_video_down"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15dp"
				android:textColor="#000"
				android:textSize="14sp" />
		</LinearLayout>

		<TextView
			android:id="@+id/pull_fps_down"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/linearlayout1"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="10dp"
			android:textColor="#000"
			android:textSize="14sp" />
	</RelativeLayout>

	<TextView
		android:id="@+id/push_url"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:textColor="#ffffff"
		android:textSize="16sp" />
</RelativeLayout>